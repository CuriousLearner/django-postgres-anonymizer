# Django PostgreSQL Anonymizer Example Project Environment Variables
# Copy this file to .env and update the values for your environment

# Django Configuration
DEBUG=true
SECRET_KEY=your-super-secret-key-here-please-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=postgres_anon_example
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# Security Settings (for production)
SECURE_HSTS_SECONDS=31536000
SECURE_SSL_REDIRECT=false
SESSION_COOKIE_SECURE=false
CSRF_COOKIE_SECURE=false

# Django PostgreSQL Anonymizer Settings
ANON_ENABLED=true
ANON_AUTO_APPLY_RULES=false
ANON_VALIDATE_FUNCTIONS=true
ANON_ALLOW_CUSTOM_FUNCTIONS=false
ANON_ENABLE_LOGGING=true
ANON_BATCH_SIZE=1000
ANON_USE_TRANSACTIONS=true
ANON_DEFAULT_MASKED_ROLE=masked_reader
ANON_MASKED_GROUPS=view_masked_data,analysts,qa_team
ANONYMIZED_DATA_ROLE=masked_reader

# Logging
LOG_LEVEL=INFO
