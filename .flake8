[flake8]
max-line-length = 120
ignore = E203,W503,E501,F401
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    migrations,
    .tox,
    .pytest_cache,
    node_modules,
    staticfiles,
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
    */migrations/*:E501,F401
max-complexity = 10
